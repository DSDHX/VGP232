<Window x:Class="Assignment2c.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Weapons Editor" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Load/Save -->
            <RowDefinition Height="Auto"/>
            <!-- Sort -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- ListBox -->
        </Grid.RowDefinitions>

        <!-- Top Section: Load and Save -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Load" Width="80" Height="25" Margin="0,0,10,0" Click="LoadClicked"/>
            <Button Content="Save" Width="80" Height="25" Click="SaveClicked"/>
        </StackPanel>

        <!-- Sort Section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Sort by:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <RadioButton Content="Name" GroupName="SortGroup" Margin="0,0,10,0" Checked="SortRadioSelected" Tag="Name" IsChecked="True"/>
            <RadioButton Content="BaseAttack" GroupName="SortGroup" Margin="0,0,10,0" Checked="SortRadioSelected" Tag="BaseAttack"/>
            <RadioButton Content="Rarity" GroupName="SortGroup" Margin="0,0,10,0" Checked="SortRadioSelected" Tag="Rarity"/>
            <RadioButton Content="Passive" GroupName="SortGroup" Margin="0,0,10,0" Checked="SortRadioSelected" Tag="Passive"/>
            <RadioButton Content="SecondaryStat" GroupName="SortGroup" Checked="SortRadioSelected" Tag="SecondaryStat"/>
        </StackPanel>

        <!-- Filter Section -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Type Filter -->
            <TextBlock Text="Show only type" VerticalAlignment="Center" Margin="0,0,10,5"/>
            <ComboBox x:Name="FilterTypeComboBox" Grid.Column="1" Margin="0,0,0,5" SelectionChanged="FilterTypeOnlySelectionChanged"/>

            <!-- Name Filter -->
            <TextBlock Text="Filter by name:" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="FilterNameTextBox" Grid.Row="1" Grid.Column="1" Height="25" TextChanged="FilterNameTextChanged"/>
        </Grid>

        <!-- Main ListBox -->
        <ListBox x:Name="WeaponListBox" Grid.Row="3" Margin="0,0,10,0"/>

        <!-- Right Side Buttons -->
        <StackPanel Grid.Column="1" Grid.Row="3" VerticalAlignment="Center">
            <Button Content="Add" Height="30" Margin="0,0,0,10" Click="AddClicked"/>
            <Button Content="Edit" Height="30" Margin="0,0,0,10" Click="EditClicked"/>
            <Button Content="Remove" Height="30" Click="RemoveClicked"/>
        </StackPanel>

    </Grid>
</Window>