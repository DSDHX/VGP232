<Window x:Class="Assignment2c.EditWeaponWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add Weapon" Height="550" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Name -->
            <RowDefinition Height="Auto"/>
            <!-- Type -->
            <RowDefinition Height="Auto"/>
            <!-- Image Preview -->
            <RowDefinition Height="Auto"/>
            <!-- Image URL -->
            <RowDefinition Height="Auto"/>
            <!-- Rarity -->
            <RowDefinition Height="Auto"/>
            <!-- Base Attack -->
            <RowDefinition Height="Auto"/>
            <!-- Secondary Stat -->
            <RowDefinition Height="Auto"/>
            <!-- Passive -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Name -->
        <TextBlock Text="Name" VerticalAlignment="Center" Grid.Row="0"/>
        <TextBox x:Name="NameTextBox" Grid.Column="1" Grid.Row="0" Margin="0,0,0,10" Height="25"/>

        <!-- Type -->
        <TextBlock Text="Type" VerticalAlignment="Center" Grid.Row="1"/>
        <ComboBox x:Name="TypeComboBox" Grid.Column="1" Grid.Row="1" Margin="0,0,0,10" Height="25"/>

        <!-- Image Preview -->
        <Border Grid.Column="1" Grid.Row="2" Height="100" Margin="0,0,0,10" BorderBrush="DarkBlue" BorderThickness="1" Background="White">
            <Image x:Name="WeaponImagePreview" Stretch="UniformToFill"/>
        </Border>

        <!-- Image URL -->
        <TextBlock Text="Image URL" VerticalAlignment="Center" Grid.Row="3"/>
        <TextBox x:Name="ImageUrlTextBox" Grid.Column="1" Grid.Row="3" Margin="0,0,0,10" Height="25" LostFocus="ImageUrlTextBox_LostFocus"/>

        <!-- Rarity -->
        <TextBlock Text="Rarity" VerticalAlignment="Center" Grid.Row="4"/>
        <ComboBox x:Name="RarityComboBox" Grid.Column="1" Grid.Row="4" Margin="0,0,0,10" Height="25"/>

        <!-- Base Attack -->
        <TextBlock Text="Base Attack" VerticalAlignment="Center" Grid.Row="5"/>
        <TextBox x:Name="BaseAttackTextBox" Grid.Column="1" Grid.Row="5" Margin="0,0,0,10" Height="25"/>

        <!-- Secondary Stat -->
        <TextBlock Text="Secondary Stat" VerticalAlignment="Center" Grid.Row="6"/>
        <TextBox x:Name="SecondaryStatTextBox" Grid.Column="1" Grid.Row="6" Margin="0,0,0,10" Height="25"/>

        <!-- Passive -->
        <TextBlock Text="Passive" VerticalAlignment="Center" Grid.Row="7"/>
        <TextBox x:Name="PassiveTextBox" Grid.Column="1" Grid.Row="7" Margin="0,0,0,10" Height="25"/>

        <!-- Buttons Area -->
        <Grid Grid.Row="9" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Generate Button (Bonus) -->
            <Button Content="Generate" Width="80" Height="30" Click="Generate_Click"/>

            <!-- Cancel Button -->
            <Button Grid.Column="2" Content="Cancel" Width="80" Height="30" Margin="0,0,10,0" Click="Cancel_Click"/>

            <!-- Submit (Add/Save) Button -->
            <Button x:Name="SubmitButton" Grid.Column="3" Content="Add" Width="80" Height="30" Click="Submit_Click"/>
        </Grid>
    </Grid>
</Window>